{
  "name": "@product-base/pback",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "defaultConfiguration": "development",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "platform": "node",
          "outputPath": "apps/pback/dist",
          "format": [
            "esm"
          ],
          "bundle": false,
          "minify": false,
          "sourcemap": true,
          "main": "apps/pback/src/main.ts",
          "tsConfig": "apps/pback/tsconfig.app.json",
          "assets": [
            "apps/pback/src/assets"
          ],
          "esbuildOptions": {
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "staging": {
            "sourcemap": true,
            "minify": true
          },
          "production": {
            "minify": true,
            "sourcemap": false
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@product-base/pback:build",
          "runBuildTargetDependencies": true,
          "inspect": false
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/pback/dist/package.json",
          "{workspaceRoot}/apps/pback/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/pback/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "docker:build": {
        "dependsOn": [
          "build",
          "prune"
        ]
      }
    }
  },
  "dependencies": {
    "better-auth": "^1.3.13",
    "express": "^5.1.0",
    "helmet": "^8.1.0"
  }
}
